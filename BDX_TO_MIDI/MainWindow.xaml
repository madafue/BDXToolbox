<Window x:Class="BDX_TO_MIDI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BDX to MIDI Converter" Height="350" Width="550"
        Background="{DynamicResource WindowBackground}"
        Foreground="{DynamicResource WindowForeground}"
        Icon="bdx.ico"
        FontFamily="Segoe UI" FontSize="13">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- BDX Path Row -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="bdxPathTextBox"
                     Width="360"
                     Margin="0,0,10,0"
                     IsReadOnly="True"
                     Background="{DynamicResource TextboxBrush}"
                     Foreground="{DynamicResource WindowForeground}"
                     BorderBrush="{DynamicResource BorderBrushColor}"/>
            <Button Content="Browse BDX"
                    Width="100"
                    Click="BrowseBdx_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderBrush="#388E3C"/>
        </StackPanel>

        <!-- MIDI Path Row -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="midiPathTextBox"
                     Width="360"
                     Margin="0,0,10,0"
                     IsReadOnly="True"
                     Background="{DynamicResource TextboxBrush}"
                     Foreground="{DynamicResource WindowForeground}"
                     BorderBrush="{DynamicResource BorderBrushColor}"/>
            <Button Content="Save MIDI"
                    Width="100"
                    Click="SaveMidi_Click"
                    Background="#2196F3"
                    Foreground="White"
                    BorderBrush="#1976D2"/>
        </StackPanel>

        <!-- Log Box -->
        <TextBox x:Name="logTextBox"
                 Grid.Row="2"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 Background="{DynamicResource TextboxBrush}"
                 Foreground="{DynamicResource WindowForeground}"
                 BorderBrush="{DynamicResource BorderBrushColor}"
                 Padding="5"/>

        <!-- Convert Button -->
        <Button Grid.Row="3"
                Content="Convert"
                Click="Convert_Click"
                HorizontalAlignment="Right"
                Width="100"
                Background="#a86fff"
                Foreground="White"
                BorderBrush="#6907fb"
                Margin="0,10,0,0"/>
        
        <CheckBox Content="Dark Mode" Grid.Row="3"
          HorizontalAlignment="Left"
          Margin="0,10,0,0"
          Foreground="{DynamicResource WindowForeground}"
          Checked="DarkMode_Checked"
          Unchecked="DarkMode_Unchecked"/>
    </Grid>
</Window>
